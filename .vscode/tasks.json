{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ build program",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "-Wextra",
                "-pthread",
                "${workspaceFolder}/src/main",
                "-o",
                "${workspaceFolder}/prog"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}